{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build wheel",
            "command": "python3.6 ./setup.py bdist_wheel",
            "type": "shell",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": "py -3 .\\setup.py bdist_wheel"
            }
        },
        {
            "label": "build coverage",
            "command": "nosetests PACKAGE_NAME/tests --with-coverage --cover-html --cover-html-dir ./coverage --cover-tests --cover-erase --cover-branches --cover-package=PACKAGE_NAME",
            "type": "shell",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "clean rest",
            "command": "rm -rf ./.noseids; rm -rf ./*.egg-info; find ../nanopooltool/ -name '__pycache__' -type d -exec rm -rf '{}' +",
            "type": "shell",
            "windows": {
                "command": "rm -rec -fo .\\.noseids; rm -rec -fo .\\*.egg-info; Find-ChildItem -Name '__pycache__' -Type d -Exec 'rm -rec -fo {} '"
            },
            "problemMatcher": []
        },
        {
            "label": "clean wheel",
            "command": "python3.6 setup.py clean -a --bdist-base dist; rm -rf build",
            "type": "shell",
            "windows": {
                "command": "py -3 setup.py clean -a --bdist-base dist; rm -rec -fo build"
            },
            "problemMatcher": []
        },
        {
            "label": "clean coverage",
            "command": "rm -rf ./coverage; rm -f ./.coverage",
            "type": "shell",
            "windows": {
                "command": "rm -rec -fo .\\coverage; rm -fo .\\.coverage"
            },
            "problemMatcher": []
        }
    ]
}
